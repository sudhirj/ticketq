<h1 class="display-5 my-4"><a href="<%= company_link_path @company.slug %>"><%= @company.name %></a></h1>
<div class="row">
  <% @performance_groups.each do |key, performances| %>
    <div class="col-12 col-sm-6 col-md-6 col-lg-4 col-xl-3">
      <div class="card mb-4">
        <img src="https://source.unsplash.com/random" class="card-img-top" alt="...">
        <div class="card-body">
          <h3 class="card-title"><%= key.show.name %></h3>
          <p class="lead"><%= key.show.tagline %></p>
          <!--          <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's-->
          <!--            content.</p>-->
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><span class="font-weight-bold"><%= key.venue.name %></span>&nbsp;<small class="text-muted"><%= key.venue.area %></small>
          </li>
          <% performances.group_by { |p| p.showtime.to_date }.each do |date, performances| %>
            <li class="list-group-item d-flex justify-content-between align-items-baseline"><span><%= date.strftime("%A, #{date.day.ordinalize} %B") %></span><small class="text-uppercase text-muted"><%= performances.size %> <%= 'show'.pluralize(performances.size) %></small>
            </li>
          <% end %>
        </ul>
        <div class="card-body">
          <a href="<%= show_link_path(@company.slug, key.show.slug) %>" class="btn btn-primary text-uppercase w-100 stretched-link">Book
            Tickets</a>
        </div>
      </div>
    </div>
  <% end %>
</div>
<h4 class="text-right text-muted my-4"><a href="<%= company_link_path @company.slug %>"><%= @company.name %></a></h4>
<h1><a href="<%= show_link_path @company.slug, @show.slug %>"><%= @show.name %></a></h1>
<h5><%= @show.tagline %></h5>
<div class="row my-3">
  <div class="col-12 col-md-6 mb-3 mb-md-0">
    <%= render partial: "media/datetime", locals: {datetime: @performance.showtime} %>
  </div>
  <div class="col-12 col-md-6">
    <%= render partial: "media/venue", locals: {venue: @performance.venue} %>
  </div>
</div>
<hr class="my-3"/>
<%= form_tag booking_link_path do |f| %>
  <h5 class="my-3">Which tickets would you like?</h5>
  <div class="row mt-3 mb-0 no-gutters mx-n2">
    <% @performance.denominations.sort_by(&:price).reverse.each_with_index do |denom, i| %>
      <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-3 px-2">
        <div class="" style="cursor: pointer;">
          <input type="radio" id="<%= denom.id %>" name="denom"
                 <% if i == 1 %>checked
                 <% end %>  class="special" value="<%= denom.id %>">
          <label class="special" for="<%= denom.id %>"><%= denom.name %>
            <span class="float-right font-weight-bold">â‚¹<%= denom.price %><small> / ticket</small></span></label>
        </div>
      </div>
    <% end %>
  </div>
  <h5 class="my-3">How many tickets would you like?</h5>
  <div class="row mt-3 mb-0 no-gutters mx-n2">
    <% (1..10).each_with_index do |count, i| %>
      <div class="col-3 col-sm-2 col-lg-1 mb-3 px-2">
        <div class="" style="cursor: pointer;">
          <input type="radio" id="<%= count %>" name="count"
                 <% if i == 1 %>checked
                 <% end %>  class="special" value="<%= count %>">
          <label class="special text-center" for="<%= count %>"><%= count %></label>
        </div>
      </div>
    <% end %>
  </div>

  <hr class="my-3"/>
  <div class="row my-3">
    <div class="col-12 mb-2">
      <div class="input-group">
        <div class="input-group-prepend">
          <label class="input-group-text bg-gradient-light text-muted" for="name">Name:</label>
        </div>
        <input type="text" class="form-control text-center" id="name" name="name" required/>
      </div>
    </div>
    <div class="col-12 my-2">
      <div class="input-group">
        <div class="input-group-prepend">
          <label class="input-group-text bg-gradient-light text-muted" for="email">Email Address:</label>
        </div>
        <input type="email" name="email" class="form-control text-center" required id="email"/>
      </div>
    </div>
    <div class="col-12 mt-2">
      <div class="input-group">
        <div class="input-group-prepend">
          <label class="input-group-text bg-gradient-light text-muted" for="mobile">Mobile Number:</label>
        </div>
        <input type="tel" class="form-control text-center" name="mobile" maxlength="10" required id="mobile"/>
      </div>
    </div>
  </div>
  <hr class="my-3"/>
  <div class="row my-3">
    <div class="col-12">
      <button class="btn btn-success btn-lg w-100 text-uppercase" type="submit">Book Tickets</button>
    </div>
  </div>
<% end %>
<p class="text-center text-muted">
  <small>Your ticket will be sent to the email address and mobile number that you provide.
  </small>
</p>



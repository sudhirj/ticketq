<h4 class="text-right text-muted my-4">The Kuku Company</h4>
<h1>Company</h1>
<h5>A Musical Comedy</h5>
<div class="row my-3">
  <div class="col-12 col-md-6 mb-3">
    <div class="media bg-light rounded p-3">
      <img src="https://source.unsplash.com/256x256/?architecture" class="mr-3 rounded" width="64px" height="64px" alt="...">
      <div class="media-body">
        <h5 class="mt-0">Museum Theatre</h5>
        Egmore, Chennai
      </div>
    </div>
  </div>
  <div class="col-12 col-md-6">
    <div class="media bg-light rounded p-3">
      <svg xmlns="http://www.w3.org/2000/svg" class="mr-3" width="64px" height="64px" aria-label="Calendar" role="img" viewBox="0 0 512 512">
        <path d="M512 455c0 32-25 57-57 57H57c-32 0-57-25-57-57V128c0-31 25-57 57-57h398c32 0 57 26 57 57z" fill="#eee"/>
        <path d="M484 0h-47c2 4 4 9 4 14a28 28 0 1 1-53-14H124c3 4 4 9 4 14A28 28 0 1 1 75 0H28C13 0 0 13 0 28v157h512V28c0-15-13-28-28-28z" fill="#dd2f45"/>
        <g fill="#f3aab9">
          <circle cx="470" cy="142" r="14"/>
          <circle cx="470" cy="100" r="14"/>
          <circle cx="427" cy="142" r="14"/>
          <circle cx="427" cy="100" r="14"/>
          <circle cx="384" cy="142" r="14"/>
          <circle cx="384" cy="100" r="14"/>
        </g>
        <text id="month" x="32" y="164" fill="#fff" font-family="monospace" font-size="140px" style="text-anchor: start"><%=@showtime.strftime('%^b') %></text>
        <text id="day" x="256" y="370" fill="#666" font-family="monospace" font-size="200px" style="text-anchor: middle"><%=@showtime.strftime('%d') %></text>
        <text id="weekday" x="256" y="470" fill="#333" font-family="monospace" font-size="80px" style="text-anchor: middle"><%=@showtime.strftime('%^a') %></text>
      </svg>

      <div class="media-body">
        <h5 class="mt-0"><%= @showtime.strftime('%H:%M %p') %></h5>
        <%=@showtime.strftime('%A')%>, <%= @showtime.to_date.to_s(:long) %>
      </div>
    </div>
  </div>
</div>


<div class="row my-3">
  <div class="col-12 mb-3">
    <div class="input-group">
      <div class="input-group-prepend">
        <label class="input-group-text" for="inputGroupSelect01">Which Tickets?</label>
      </div>
      <select class="custom-select text-center" id="inputGroupSelect03" aria-label="Example select with button addon">
        <option selected value="300">Silver ₹300</option>
        <option value="500">Gold ₹500</option>
      </select>
    </div>
  </div>
  <div class="col-12">
    <div class="input-group">
      <div class="input-group-prepend">
        <label class="input-group-text" for="inputGroupSelect01">How Many Tickets?</label>
      </div>
      <select class="custom-select text-center" id="inputGroupSelect03" aria-label="Example select with button addon">
        <% (1..10).map do |t| %>
          <option value="<%= t %>"><%= t %></option>
        <% end %>
      </select>
    </div>
  </div>
</div>
<div class="row my-3">
  <div class="col-12">
    <a class="btn btn-success btn-lg w-100 text-uppercase" href="https://rzp.io/i/LNeeYD2">Book Tickets</a>
  </div>
</div>



